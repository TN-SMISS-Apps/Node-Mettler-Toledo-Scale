{
    "name": "node-mettler-toledo",
    "version": "1.0.3",
    "description": "node mettler-toledo middleware",
    "main": "./dist/run-bytenode.js",
    "productName": "node-mt-middleware",
    "bin": "./dist/index.js",
    "scripts": {
        "start": "electron .",
        "watch": "webpack --mode development --watch",
        "compile": "webpack --mode development",
        "compile:bytenode": "electron src/build-utils/compile-bytenode",
        "prebuild:darwin": "npm run compile && rm dist/crc.js && rm dist/bundle.js",
        "prebuild": "npm run compile && rimraf dist/crc.js && rimraf dist/bundle.js",
        "build": "electron-packager . --ignore=\"^/src|(postman*|webpack*|tsconfig*|README*)\" --out release --asar --platfrom=win32 --arch=x64 --prune=true --overwrite",
        "build:darwin": "electron-packager . --ignore=\"^/src|(postman*|webpack*|tsconfig*|README*)\" --out release --asar --platfrom=darwin --prune=true --overwrite",
        "build:prod": "rimraf exes && npm run compile & npm run build & node src/build-utils/build-exe.js",
        "emulate": "ts-node src/utils/emulator.ts"
    },
    "keywords": [],
    "author": "TN",
    "license": "ISC",
    "dependencies": {
        "@hapi/joi": "^17.1.0",
        "body-parser": "^1.19.0",
        "bwip-js": "^2.0.11",
        "bytenode": "^1.1.7",
        "copyfiles": "^2.3.0",
        "crc": "^3.8.0",
        "ejs": "^3.1.5",
        "express": "^4.17.1",
        "morgan": "^1.9.1",
        "multer": "^1.4.2",
        "rxjs": "^6.5.4"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/bwip-js": "^1.7.0",
        "copy-webpack-plugin": "^6.2.0",
        "@types/crc": "^3.4.0",
        "@types/ejs": "^3.0.4",
        "@types/electron": "^1.6.10",
        "@types/express": "^4.17.3",
        "@types/hapi__joi": "^16.0.12",
        "@types/morgan": "^1.9.0",
        "@types/multer": "^1.4.4",
        "@types/node": "^12.12.55",
        "dot-prop": ">=5.1.1",
        "electron": "^9.4.0",
        "electron-packager": "^15.1.0",
        "electron-winstaller": "^4.0.1",
        "nodemon": "^2.0.2",
        "ts-loader": "^8.0.4",
        "ts-node": "^8.6.2",
        "typescript": "^3.9.7",
        "webpack": "^4.44.2",
        "webpack-cli": "^3.3.12"
    }
}
